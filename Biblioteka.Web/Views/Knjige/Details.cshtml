@model Biblioteka.DAL.Entities.Knjiga

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<h4>Knjiga</h4>
<hr />
<div class="row">
    <div class="col-sm-6">

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Naslov)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Naslov)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cijena)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cijena)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Izdavac)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Izdavac.Ime)
            </dd>
        </dl>
    </div>

    <div class=" col-sm-6">
        <h4 class="text-center">Autori</h4>
        <table class="table table-bordered ">

            <thead>
                <tr>
                    <th>
                        Ime
                    </th>
                    <th>
                        Email
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Autori)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Autor.Ime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Autor.Email)
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.kId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>



